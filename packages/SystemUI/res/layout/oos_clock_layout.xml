<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:gravity="center_vertical"
    android:id="@+id/oos_qs_container"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="4dp"
    android:layout_below="@+id/quick_qs_status_icons"
    android:layout_marginStart="1dp"
    android:layout_marginEnd="1dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:gravity="end"
        android:layout_gravity="end"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="end|center|top"
                android:layout_gravity="end|center|top"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp">
                    <LinearLayout
                        android:id="@+id/icon_container"
                        android:gravity="end|center_vertical"
                        android:layout_gravity="end|center_vertical"
                        android:orientation="horizontal"
                        android:minHeight="24dp"
                        android:layout_weight="1.0"
                        android:layout_marginEnd="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.android.systemui.statusbar.phone.StatusIconContainer
                            android:id="@+id/statusIcons"
                            android:gravity="end|center_vertical"
                            android:layout_gravity="end|center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/signal_cluster_battery_padding" />
                        <com.android.systemui.battery.BatteryMeterView
                            android:id="@+id/batteryRemainingIcon"
                            android:gravity="end|center_vertical"
                            android:layout_gravity="end|center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0"
                            android:layout_marginEnd="2dp"
                            app:textAppearance="@style/TextAppearance.QS.Status" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/oos_carrier_label"
                        android:textAppearance="@style/TextAppearance.QS.TileLabel.DataUsage"
                        android:textColor="?android:attr/textColorPrimary"
                        android:background="@drawable/btn_outlined"
                        android:paddingVertical="1dp"
                        android:paddingHorizontal="6dp"
                        android:ellipsize="marquee"
                        android:gravity="end|center_vertical"
                        android:layout_gravity="end|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:textDirection="locale" />
                </LinearLayout>
                <com.android.systemui.statusbar.AlphaOptimizedImageView
                    android:id="@+id/custom_oplus_shortcut"
                    android:background="@drawable/qs_clock_bg"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:gravity="end|center_vertical"
                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/ic_settings"
                    android:scaleType="centerInside"
                    android:tint="?android:attr/textColorPrimary"
                    android:padding="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="8dp"
                    app:backgroundTint="?offStateColor" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="start"
        android:orientation="horizontal"
        android:id="@+id/oos_clock_date_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_gravity="start|center|top"
            android:id="@+id/oos_clock"
            android:layout_width="@dimen/oos_date_offset"
            android:layout_height="wrap_content">
            <TextClock
                android:textSize="20.0sp"
                android:layout_gravity="start|center|top"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:textAlignment="viewStart"
                android:format12Hour="kk:mm"
                android:format24Hour="kk:mm"
                android:includeFontPadding="false"
                android:textColor="?android:attr/textColorPrimary" />
            <TextClock
                android:textSize="20.0sp"
                android:textColor="?android:attr/colorAccent"
                android:layout_gravity="start|center|top"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:includeFontPadding="false"
                android:maxLength="1"
                android:textAlignment="viewStart"
                android:format12Hour="kk:mm"
                android:format24Hour="kk:mm" />
        </RelativeLayout>
        <TextClock
            android:textSize="14.0sp"
            android:ellipsize="marquee"
            android:id="@+id/oos_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:includeFontPadding="false"
            android:format12Hour="EEEE, MMM dd"
            android:format24Hour="EEEE, MMM dd"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="1.0px"
            android:paddingEnd="2dp"
            android:textColor="?android:attr/textColorPrimary"/>
    </LinearLayout>
</FrameLayout>
